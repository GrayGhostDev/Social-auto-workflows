# n8n Docker Environment Configuration
# Copy this file to .env and update with your values

# Environment
ENVIRONMENT=production

# n8n Version (use specific version for production)
N8N_VERSION=1.19.4

# n8n Host Configuration
N8N_HOST=n8n.grayghostai.com
N8N_PROTOCOL=https
WEBHOOK_URL=https://n8n.grayghostai.com/
N8N_EDITOR_BASE_URL=https://n8n.grayghostai.com/

# Database Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=changeme-strong-password
POSTGRES_DB=n8n

# Redis Configuration
REDIS_PASSWORD=changeme-redis-password

# n8n Authentication
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme-admin-password

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=changeme-jwt-secret-min-32-chars

# Encryption Key (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=changeme-encryption-key-min-32-chars

# Instance ID (optional, for tracking)
N8N_INSTANCE_ID=

# Execution Mode
EXECUTIONS_MODE=queue

# Worker Configuration
N8N_WORKER_REPLICAS=2

# Logging
N8N_LOG_LEVEL=info
LOG_LEVEL=info

# Timezone
TZ=America/New_York

# MCP Bridge Version
MCP_BRIDGE_VERSION=latest

# Resource Limits (optional overrides)
# N8N_MEMORY_LIMIT=4G
# N8N_CPU_LIMIT=4
# POSTGRES_MEMORY_LIMIT=2G
# POSTGRES_CPU_LIMIT=2